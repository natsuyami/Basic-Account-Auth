<registerAccount>:
	canvas.before:
	    Color:
	        rgba: .7, .8, .8, 1
	    Rectangle:
	        pos: self.pos
	        size: self.size
	orientation: "lr-tb"
	spacing: 20
	padding: 200,10

	Label:
		text: '[b]' + "Reminder\'s Scheduler" + '[/b]'
		size_hint: 1,0.10
		width: 100
		font_size: 24
		color: .12,.32,.26,1
		valign: 'middle'
		markup: True

	Label:
		text: "\n" + '[i]' + "\"An Application for note taking of important events, schedule, things and many more\"" + '[/i]' + "\n \n"
		size_hint: 1,0.20
		width: 50
		text_size: cm(12), cm(8)
		font_size: 22
		color: .12,.30,.24,1
		valign: 'middle'
		halign: 'center'
		markup: True

	Label:
		text: '[b]' + "Name" + '[/b]'
		size_hint: 0.4,0.05
		width: 60
		font_size: 18
		color: .12,.32,.26,1
		text_size: cm(2.5), cm(0)
		halign: 'right'
		valign: 'middle'
		markup: True

	TextInput:
		text: ""
		size_hint: 0.6,0.05
		width: 100
		text_size: cm(3), cm(0)
		font_size: 16
		halign: 'left'
		valign: 'middle'
		font_size: 18
		multiline: False

	Label:
		text: '[b]' + "Email" + '[/b]'
		size_hint: 0.4,0.05
		width: 60
		font_size: 18
		color: .12,.32,.26,1
